import sys
scriptdir=sys.path[0]
sys.path.insert(0, scriptdir+'/..')
import base
import ldtp
import os

def test():
  base.setup()
  base.backup_simple(backend='file', includes=['data/simple'])
  # Set up our duplicity wrapper to be called by deja-dup
  os.environ['PATH'] = os.path.join(scriptdir, 'clear-cache-bin') + ":" + os.environ['PATH']
  base.backup_simple()

base.run(test)
