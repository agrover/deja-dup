<?xml version="1.0" encoding="UTF-8"?>
<application>
    <id type="desktop">deja-dup.desktop</id>
    <licence>CC BY-SA</licence>
    <_name>Déjà Dup Backup Tool</_name>
    <_description>
        <p>Déjà Dup is a simple backup tool. It allows you to backup the Right Way (encrypted, off-site, and regular) without sacrificing ease of use.</p>
        <p>Déjà Dup is designed to integrate with the GNOME desktop and is completely free.</p>
        <ul>
            <li>Support for local, remote, or cloud backup locations, such as Amazon S3, Rackspace Cloud Files, and Ubuntu One</li>
            <li>Securely encrypts and compresses your data</li>
            <li>Incrementally backs up, letting you restore from any particular backup</li>
            <li>Schedules regular backups</li>
        </ul>
    </_description>
    <url type="homepage">https://launchpad.net/deja-dup</url>
    <updatecontact>deja-dup-list@gnome.org</updatecontact>
    <screenshots>
        <screenshot type="default">https://launchpad.net/deja-dup/@SERIES@/@VERSION@/+download/screenshot-1.png</screenshot>
        <screenshot>https://launchpad.net/deja-dup/@SERIES@/@VERSION@/+download/screenshot-2.png</screenshot>
    </screenshots>
</application>
